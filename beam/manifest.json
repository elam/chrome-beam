{
  "name": "Chrome Beam",
  "description": "Yahoo Hackathon",
  "version": "1",
  "manifest_version": 2,
  "app": {
    "launch": {
      "local_path": "beaminit.html",
      "container" : "tab"
    }
  },
  "content_scripts": [
   {
      "matches": ["https://www.dropbox.com/1/oauth/authorize*"],
      "js": ["js/dropbox-authorize.js"]
  }],
  "permissions": [
    "unlimitedStorage",
    "tabs",
    "https://www.dropbox.com/",
    "https://api.dropbox.com/",
    "https://api-content.dropbox.com/"
  ],
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  "offline_enabled" : true,
  "permissions": [
  	"contextMenus"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}